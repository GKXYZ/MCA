#include<stdio.h>
#include<stdlib.h>
void push(int[],int*,int);
int pop(int[],int*);
void display(int[],int*);
#define MAX 5
int main()
{
        int s[20],top=-1,item,ch;
        while(1)
        {
                printf("\n#########STACK###############\n");
                printf("\n 1. Push");
                printf("\n 2. POP");
                printf("\n 3. Display");
                printf("\n 4. Exit");
                printf("\n Enter your choice:: ");
                scanf("%d",&ch);
                switch(ch)
                {
                        case 1: printf("\n Enter the item: ");
                                scanf("%d",&item);
                                push(s,&top,item);
                                break;
                        case 2: item = pop(s,&top);
                                if(item == 0)
                                        printf("\n Stack Inflow \n");
                                else
                                        printf("\n The POPed Element is : %d\n",item);
                                break;
                        case 3: display(s,&top);
                                break;
                        case 4: exit(0);
                                break;
                        default: printf("\n Wrong Choice \n");
                }
        }
        return 0;
}
void push(int s[],int *top,int ele)
{
        if(*top == (MAX-1))
        {
                printf("\n Stack Overflow\n");
                return;
        }
        s[++(*top)] = ele;
        printf("\n The pushed element is %d\n",ele);
        return;
}
int pop(int s[],int *top)
{
        int i;
        if(*top == -1)
                return 0;
        else
        {
                i = s[(*top)--];
                return(i);
        }
}
void display(int s[],int *top)
{
        int i;
        if(*top == -1)
        {
                printf("\n Stack is Empty\n");
                return;
        }
        printf("\n The Elements in Stack are:\n");
        for(i=*top; i>-1; i--)
                printf("\n%d",s[i]);
        return;
}